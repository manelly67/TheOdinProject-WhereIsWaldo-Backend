generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id         String    @id @unique
  startedAt  DateTime  @default(now())
  finishedAt DateTime?
  timeRecord Json      @default("{}")
  player     Player    @relation(fields: [playerId], references: [id])
  playerId   String
  picture    Picture   @relation(fields: [pictureId], references: [id])
  pictureId  String
  targets    Json[]
  status     Status    @default(GAMING)
}

enum Status {
  GAMING
  ENDED
  ABORTED
}

model Character {
  id           String  @id @unique
  name         String
  imageAbout   Picture @relation(fields: [imageAboutId], references: [id])
  imageAboutId String
  x            Decimal
  y            Decimal
  leftX        Decimal
  leftY        Decimal
  topX         Decimal
  topY         Decimal
  rightX       Decimal
  rightY       Decimal
  bottomX      Decimal
  bottomY      Decimal
}

model Picture {
  id         String      @id @unique
  title      String
  src_image  String
  characters Character[]
  Game       Game[]
}

model Player {
  id         String  @id @unique
  playername String  @default("ANONIMOUS")
  session    Session @relation(fields: [sessionId], references: [id])
  sessionId  String  @unique
  Game       Game[]
}

model Session {
  id        String   @id
  sid       String   @unique
  data      Json
  expiresAt DateTime
  Player    Player[]
}
